<!-- 插件配置文件。更多信息：https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- 插件的唯一标识符。应该是完全限定名。在插件版本之间不能更改。 -->
    <id>dev.dong4j.ccwrapper</id>

    <!-- 公共插件名称应使用标题大小写书写。
         指南：https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>CC Wrapper</name>

    <!-- 在插件页面上显示的供应商名称或组织ID。 -->
    <vendor email="dong4j@gmail.com">dong4j</vendor>

    <!-- 产品和插件兼容性要求。
         更多信息：https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <idea-version since-build="223" until-build="999.*"/>
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.terminal</depends>

    <!-- 插件定义的扩展点。
         更多信息：https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <!-- 通知组 -->
        <notificationGroup id="CCWrapperNotifications"
                           displayType="BALLOON"
                           isLogByDefault="true"/>
        
        <!-- Tool Window -->
        <toolWindow id="CC Wrapper"
                    secondary="true"
                    anchor="bottom"
                    icon="/icons/codex.svg"
                    factoryClass="dev.dong4j.ccwrapper.ui.CcWrapperToolWindowFactory"/>
    </extensions>

    <!-- 插件定义的动作 -->
    <actions>
        <!-- 启动 Codex -->
        <action id="dev.dong4j.ccwrapper.action.LaunchCodexAction"
                class="dev.dong4j.ccwrapper.action.LaunchCodexAction"
                text="Launch Codex"
                description="Start Codex MCP session">
            <add-to-group group-id="MainToolbarRight" anchor="last"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>

